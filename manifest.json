{
  "manifest_version": 2,

  "name": "GA Notifications!",
  "description": "This extension will allow you to receive important Salesforce notifications!",
  "version": "1.0",
  "background": {
    "scripts": ["/app/main.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "ga_logo.png",
    "default_popup": "/app/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "gcm",
    "storage",
    "notifications"
  ]
}